<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>

            <% if (!contact) { %>

            <div class="alert alert-danger" role="alert">
                Data tidak ditemukan! <br>
                <a href="/contact" class="card-link">Back &laquo;</a>
            </div>


            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama%></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp%></h6>
                    <p class="card-text"><%= contact.email%></p>

                    <a href="/contact/edit/<%= contact.nama %>" class="btn btn-warning"
                        onclick="return confirm('yakin ubah nihh ?');">&laquo; Edit</a>

                    <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger"
                        onclick="return confirm('yakin hapus nihh ?');">&laquo; Hapus</a>

                    <a href="/contact" class="card-link d-block mt-3">
                        Back &laquo;</a>
                </div>
            </div>
            <% } %>

        </div>
    </div>
</div>